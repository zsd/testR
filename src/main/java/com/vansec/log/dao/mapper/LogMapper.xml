<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.vansec.log.dao.mapper.LogMapper">

    <resultMap id="logMap" type="com.vansec.log.domain.Log">
        <result column="id"              property="id"/> <!--主键-->
        <result column="type"            property="type"/> <!--业务日志类型 1：添加 2：删除 3：修改 4：查询（可以自定义更多操作类型-->
        <result column="description"     property="description"/> <!--日志操作描述-->
        <result column="ip"              property="ip"/> <!--操作人IP-->
        <result column="client_type"     property="client.type"/> <!--客户端类型-->

        <result column="client_version"  property="client.version"/> <!--客户端版本-->
        <result column="module_id"       property="module.id"/> <!--模块ID-->
        <result column="module_name"     property="module.name"/> <!--模块名称-->
        <result column="obj_id"          property="obj.id"/> <!--关联对象ID-->
        <result column="obj_name"        property="obj.name"/> <!--关联对象名称-->

        <result column="obj_type_id"     property="obj.type.id"/> <!--关联对象类型ID-->
        <result column="obj_type_name"   property="obj.type.name"/> <!--关联对象类型名称-->
        <result column="latitude"        property="gps.latitude"/> <!--纬度-->
        <result column="longitude"       property="gps.longitude"/> <!--经度-->
        <result column="create_time"     property="createTime"/> <!--创建时间-->

        <result column="post_id"    property="post.id"/> <!--岗位ID-->
        <result column="post_name"  property="post.name"/> <!--岗位名称-->

        <result column="user_id"    property="post.user.id"/> <!--用户ID-->
        <result column="user_name"  property="post.user.name"/> <!--用户名称-->

        <result column="department_id"    property="post.parent.id"/> <!--部门ID-->
        <result column="department_name"  property="post.parent.name"/> <!--部门名称-->

        <result column="org_id"    property="post.parent.parent.id"/> <!--单位ID-->
        <result column="org_name"  property="post.parent.parent.name"/> <!--单位名称-->

        <!--<association property="post" resultMap="postMap"/>-->
    </resultMap>

    <!-- 岗位 -->
    <resultMap id="postMap" type="com.vansec.org.domain.Post">
        <result column="post_id"    property="post.id"/> <!--岗位ID-->
        <result column="post_name"  property="post.name"/> <!--岗位名称-->

        <association property="user"    resultMap="userMap" />
        <association property="parent"  resultMap="departmentMap" />
    </resultMap>

    <!-- 用户 -->
    <resultMap id="userMap" type="com.vansec.org.domain.User">
        <result column="user_id"    property="user.id"/> <!--用户ID-->
        <result column="user_name"  property="user.name"/> <!--用户名称-->
    </resultMap>

    <!-- 部门 -->
    <resultMap id="departmentMap" type="com.vansec.org.domain.Department">
        <result column="department_id"    property="parent.id"/> <!--部门ID-->
        <result column="department_name"  property="parent.name"/> <!--部门名称-->

        <association property="parent"  resultMap="orgMap" />
    </resultMap>

    <!-- 单位 -->
    <resultMap id="orgMap" type="com.vansec.org.domain.Org">
        <result column="org_id"    property="parent.id"/> <!--单位ID-->
        <result column="org_name"  property="parent.name"/> <!--单位名称-->
    </resultMap>

    <sql id="table-name">plat_log</sql>

    <sql id="sqlPart">
        id,             type,            description,    ip,             client_type,
        client_version, module_id,       module_name,     obj_id,          obj_name,
        obj_type_id,    obj_type_name,   user_id,         user_name,       post_id,
        post_name,      department_id,   department_name, org_id,        org_name,
        latitude,       longitude,       create_time
    </sql>

    <sql id="if-part">
        <where>
            <if test="type != null and type !='' ">
                and type = #{type}
            </if>
            <if test="description != null and description !='' ">
                and  description LIKE '%${description}%'
            </if>
        </where>
    </sql>

    <!-- 根据日志ID获取日志信息-->
    <select id="getById" resultMap="logMap">
        select
        <include refid="sqlPart"/>
        from
        <include refid="table-name"/>
        where id = #{id}
    </select>

    <!--插入日志-->
    <insert id="save">
        insert into<include refid="table-name"/>(
        <include refid="sqlPart"/>
        )
        values
        (
            #{id,                       jdbcType=VARCHAR  },
            #{type,                     jdbcType=VARCHAR  },
            #{description,              jdbcType=VARCHAR  },
            #{ip,                       jdbcType=VARCHAR  },
            #{client.type,              jdbcType=NUMERIC  },

            #{client.version,           jdbcType=VARCHAR  },
            #{module.id,                jdbcType=VARCHAR  },
            #{module.name,              jdbcType=VARCHAR  },
            #{obj.id,                   jdbcType=VARCHAR  },
            #{obj.name,                 jdbcType=VARCHAR  },

            #{obj.objType.id,           jdbcType=VARCHAR  },
            #{obj.objType.name,         jdbcType=VARCHAR  },
            #{post.user.id,             jdbcType=VARCHAR  },
            #{post.user.name,           jdbcType=VARCHAR  },
            #{post.id,                  jdbcType=VARCHAR  },
            #{post.name,                jdbcType=VARCHAR  },

            #{post.parent.id,           jdbcType=VARCHAR  },
            #{post.parent.name,         jdbcType=VARCHAR  },
            #{post.parent.parent.id,    jdbcType=VARCHAR  },
            #{post.parent.parent.name,  jdbcType=VARCHAR  },

            #{gps.latitude,             jdbcType=VARCHAR  },
            #{gps.longitude,            jdbcType=VARCHAR  },
            now()
        )
    </insert>

    <!-- 查询日志, 查询记录数 -->
    <select id="count" resultType="long">
        select count(id)
        from <include refid="table-name"/>
        <include refid="if-part"/>
    </select>

    <!-- 查询日志, 1.输入用map传入多个参数 2.<where>语句, 添加where和and关键字 3.输出直接映射对象 -->
    <select id="search" resultMap="logMap">
        select <include refid="sqlPart"/>
        from <include refid="table-name"/>
        <include refid="if-part"/>
        ORDER BY create_time DESC
        LIMIT #{skip,     jdbcType=NUMERIC  }, #{limit,     jdbcType=NUMERIC  }
    </select>


</mapper>